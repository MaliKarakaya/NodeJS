<% 

let yukseklik = '';
if(index == undefined)
{
    yukseklik = "600";
}
else
{
    yukseklik = "60"+index;
}


%> 

<div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
        <img src="http://source.unsplash.com/random/800x <%= yukseklik %> " alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
       
        <div class="media-content">
          <p class="title is-4"><%- makale.title.rendered %> </p>
        </div>
      </div>
  
      <div class="content">
       
        <%- index == undefined ? makale.content.rendered : makale.excerpt.rendered.slice(0,200) %> 

             <% if (index != undefined) { %>
                <a href="/blog/<%= makale.id %> ">Devamını oku</a>
             <%} %> 
       
      </div>
    </div>
  </div>